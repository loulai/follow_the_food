<h1>Edit <%= @restaurant.name %></h1>

<%= form_for :restaurant, url: restaurant_path(@restaurant), method: :patch do |f| %>

	<%= f.label :name %><br>
	<%= f.text_field :name %><br>

	<%= f.label :city %><br>
	<%= f.text_field :city %><br>

	<%= f.label :description %><br>
	<%= f.text_area :description %><br>

	<%= f.label :location %><br>
	<%= f.text_area :location %><br>

	<%= f.submit %>

<% end %>

<%= link_to 'Back to ' +  @restaurant.name, restaurant_path(@restaurant.id) %><br>
<%= link_to 'Back to Homepage', restaurants_path %>

