<h1>Add a new restaurant</h1>

<%= form_for :restaurant, url: restaurants_path do |f| %>
	<%= f.label :name %><br>
	<%= f.text_field :name %><br>

	<%= f.label :country %><br>
	<%= f.text_field :country %><br>

	<%= f.label :text, 'Description' %><br>
	<%= f.text_area :text %><br>

	<%= f.label :location %><br>
	<%= f.text_area :location %><br>

	<%= f.submit %>

<% end %>

