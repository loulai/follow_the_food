<h1>Add a new restaurant</h1>

<%= form_for :restaurant, url: restaurants_path do |f| %>
	<%= f.label :name %><br>
	<%= f.text_field :name %><br>

	<%= f.label :city %><br>
	<%= f.text_field :city %><br>

	<%= f.label :description %><br>
	<%= f.text_area :description %><br>

	<%= f.label :location %><br>
	<%= f.text_area :location %><br>

	<%= f.submit %>

<% end %>

